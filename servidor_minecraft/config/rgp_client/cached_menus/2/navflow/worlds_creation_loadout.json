{
  "type": "list",
  "id": "worlds_creation_loadout",
  "title": "Worlds Creation - Loadout",
  "entries": [
  ],
  "back": {
    "action": "open_screen",
    "id": "worlds_list"
  },
  "elements": [
    {
      "type": "panel_list",
      "id": "region_selection_panel",
      "scroll": true,
      "render_background": false,
      "elements": [
      ],
      "entry_loader": {
        "type": "modpack_loadout_entry",
        "widget_height": 80,
        "entry_template": {
          "id": "$loadoutId",
          "elements": [
            {
              "type": "image",
              "id": "loadout_icon",
              "icon": "textures/misc/unknown_server.png",
              "hover_border": true,
              "position": {
                "x": 0,
                "y": 0,
                "pivot": "top_left"
              },
              "options": {
                "width": 70,
                "height": 70
              },
              "callback": {
                "action": "store_variables",
                "variables": [
                  {
                    "key": "selectedLoadoutId",
                    "value": "$loadoutId"
                  },
                  {
                    "key": "selectedLoadoutName",
                    "value": "$loadoutName"
                  },
                  {
                    "key": "selectedLoadoutDescription",
                    "value": "$loadoutDescription"
                  },
                  {
                    "key": "selectedLoadoutNote",
                    "value": "$loadoutNote"
                  }
                ],
                "on_complete": {
                  "action": "open_screen",
                  "id": "worlds_creation_tier",
                  "pass_storage": true
                }
              }
            },
            {
              "type": "text",
              "id": "loadout_name",
              "text": "$loadoutName",
              "position": {
                "x": 75,
                "y": 0,
                "pivot": "top_left"
              }
            },
            {
              "type": "text",
              "id": "loadout_description",
              "wrap": true,
              "text": {
                "text": "$loadoutDescription",
                "color": "yellow"
              },
              "alignment": "left",
              "position": {
                "x": 75,
                "y": 12,
                "pivot": "top_left"
              },
              "options": {
                "width": 125,
                "height": 80
              }
            }
          ]
        }
      },
      "position": {
        "x": 205,
        "y": 46,
        "pivot": "top_left"
      },
      "options": {
        "height_padding": 20
      },
      "end_position": {
        "x": 20,
        "y": 64
      }
    },
    {
      "type": "simple_button",
      "id": "back",
      "text": {
        "translate": "gui.back"
      },
      "options": {
        "width": 200,
        "height": 20
      },
      "position": {
        "x": 0,
        "y": -10,
        "pivot": "bottom_center"
      },
      "callback": {
        "action": "open_screen",
        "id": "worlds_list"
      }
    },
    {
      "type": "divider",
      "id": "divider",
      "position": {
        "x": 75,
        "y": 44,
        "pivot": "top_left"
      },
      "end_position": {
        "x": 0,
        "y": 64
      },
      "options": {
        "width": 125
      }
    },
    {
      "type": "icon_button",
      "id": "region",
      "text": {
        "translate": "rgp_client.gui.worlds_creation.region"
      },
      "icon": "rgp_client:textures/gui/button/button_dirt.png",
      "position": {
        "x": 87,
        "y": 60,
        "pivot": "top_left"
      },
      "options": {
        "width": 100,
        "height": 20
      },
      "callback": {
        "action": "open_screen",
        "id": "worlds_creation_region",
        "pass_storage": true
      }
    },
    {
      "type": "icon_button",
      "id": "loadout",
      "text": {
        "translate": "rgp_client.gui.worlds_creation.loadout"
      },
      "icon": "rgp_client:textures/gui/button/button_dirt_selected.png",
      "position": {
        "x": 87,
        "y": 90,
        "pivot": "top_left"
      },
      "options": {
        "width": 100,
        "height": 20
      }
    },
    {
      "type": "icon_button",
      "id": "tier",
      "text": {
        "translate": "rgp_client.gui.worlds_creation.tier"
      },
      "icon": "rgp_client:textures/gui/button/button_dirt.png",
      "position": {
        "x": 87,
        "y": 120,
        "pivot": "top_left"
      },
      "options": {
        "width": 100,
        "height": 20
      },
      "callback": {
        "action": "open_screen",
        "id": "worlds_creation_tier",
        "pass_storage": true
      }
    },
    {
      "type": "icon_button",
      "id": "checkout",
      "text": {
        "translate": "rgp_client.gui.worlds_creation.checkout"
      },
      "icon": "rgp_client:textures/gui/button/button_dirt.png",
      "position": {
        "x": 87,
        "y": 150,
        "pivot": "top_left"
      },
      "options": {
        "width": 100,
        "height": 20
      },
      "callback": {
        "action": "open_screen",
        "id": "worlds_creation_checkout",
        "pass_storage": true
      }
    },
    {
      "type": "image",
      "id": "logo",
      "icon": "rgp_client:textures/gui/ftb_worlds_logo.png",
      "options": {
        "width": 112,
        "height": 56
      },
      "position": {
        "x": 0,
        "y": -6,
        "pivot": "top_center"
      }
    }
  ]
}
