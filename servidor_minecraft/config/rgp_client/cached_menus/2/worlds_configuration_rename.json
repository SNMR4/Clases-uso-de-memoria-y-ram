{
  "type": "simple",
  "id": "worlds_configuration_rename",
  "title": {
    "translate": "rgp_client.gui.worlds_configuration.rename_server"
  },
  "back": {
    "action": "open_screen",
    "id": "worlds_configuration",
    "pass_storage": true
  },
  "entries": [
  ],
  "elements": [
    {
      "type": "text",
      "id": "title",
      "text": {
        "translate": "rgp_client.gui.worlds_configuration.rename_server"
      },
      "alignment": "center",
      "position": {
        "x": 0,
        "y": 15,
        "pivot": "top_center"
      }
    },
    {
      "type": "text",
      "id": "rename_server",
      "text": {
        "translate": "rgp_client.gui.worlds_configuration.rename_server",
        "color": "gray"
      },
      "alignment": "left",
      "position": {
        "x": 0,
        "y": -20,
        "pivot": "center"
      },
      "options": {
        "width": 200
      }
    },
    {
      "type": "text_box",
      "id": "world",
      "variable_id": "newServerName",
      "default_text": "$serverName",
      "character_limit": 30,
      "options": {
        "width": 200,
        "height": 20
      },
      "position": {
        "x": 0,
        "y": 0,
        "pivot": "center"
      }
    },
    {
      "type": "simple_button",
      "id": "save",
      "text": {
        "translate": "rgp_client.gui.worlds_edit.save"
      },
      "required_variable": "newServerName",
      "options": {
        "width": 200,
        "height": 20
      },
      "position": {
        "x": 0,
        "y": -35,
        "pivot": "bottom_center"
      },
      "callback": {
        "action": "request",
        "request": "rename_player_server",
        "variables": {
          "gameServerId": "$gameServerId",
          "serverName": "$newServerName"
        },
        "on_complete": {
          "action": "open_screen",
          "id": "worlds_configuration",
          "pass_storage": true
        }
      }
    },
    {
      "type": "simple_button",
      "id": "back",
      "text": {
        "translate": "gui.back"
      },
      "options": {
        "width": 200,
        "height": 20
      },
      "position": {
        "x": 0,
        "y": -10,
        "pivot": "bottom_center"
      },
      "callback": {
        "action": "open_screen",
        "id": "worlds_configuration",
        "pass_storage": true
      }
    }
  ]
}
