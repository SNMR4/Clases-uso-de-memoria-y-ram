{
  "type": "list",
  "id": "worlds_creation_simple_loadout",
  "title": "Worlds Creation",
  "back": {
    "action": "open_screen",
    "id": "worlds_creation_simple_checkout",
    "pass_storage": true
  },
  "entries": [
  ],
  "elements": [
    {
      "type": "text",
      "id": "title",
      "text": {
        "translate": "rgp_client.gui.worlds_creation.select_loadout"
      },
      "alignment": "center",
      "position": {
        "x": 0,
        "y": 15,
        "pivot": "top_center"
      }
    },
    {
      "type": "panel_list",
      "id": "loadout_selection_panel",
      "scroll": true,
      "render_background": false,
      "elements": [
      ],
      "entry_loader": {
        "type": "modpack_loadout_entry",
        "widget_height": 75,
        "entry_template": {
          "id": "$loadoutId",
          "elements": [
            {
              "type": "panel",
              "id": "$loadoutId",
              "hover_border": true,
              "elements": [
                {
                  "type": "image",
                  "id": "loadout_icon",
                  "icon": "$loadoutAssetUrl",
                  "position": {
                    "x": -105,
                    "y": 0,
                    "pivot": "top_center"
                  },
                  "options": {
                    "width": 70,
                    "height": 70
                  }
                },
                {
                  "type": "text",
                  "id": "loadout_name",
                  "text": {
                    "text": "$loadoutName",
                    "extra": [
                      {
                        "text": " - ",
                        "color": "gray"
                      },
                      {
                        "text": "$priceCost $priceCurrency",
                        "color": "aqua"
                      },
                      {
                        "text": "/$priceTierPeriod",
                        "color": "aqua"
                      }
                    ]
                  },
                  "formatter": "currency",
                  "alignment": "left",
                  "position": {
                    "x": 35,
                    "y": 0,
                    "pivot": "top_center"
                  },
                  "options": {
                    "width": 200,
                    "height": 12
                  }
                },
                {
                  "type": "text",
                  "id": "loadout_description",
                  "wrap": true,
                  "text": {
                    "text": "$loadoutDescription",
                    "color": "yellow"
                  },
                  "alignment": "left",
                  "position": {
                    "x": 35,
                    "y": 12,
                    "pivot": "top_center"
                  },
                  "options": {
                    "width": 200,
                    "height": 80
                  }
                }
              ],
              "position": {
                "x": 0,
                "y": 2,
                "pivot": "top_center"
              },
              "options": {
                "width": 280,
                "height": 70
              },
              "callback": {
                "action": "store_variables",
                "variables": [
                  {
                    "key": "selectedLoadoutId",
                    "value": "$loadoutId"
                  },
                  {
                    "key": "selectedLoadoutName",
                    "value": "$loadoutName"
                  },
                  {
                    "key": "selectedLoadoutDescription",
                    "value": "$loadoutDescription"
                  },
                  {
                    "key": "selectedLoadoutNote",
                    "value": "$loadoutNote"
                  },
                  {
                    "key": "selectedPriceTierName",
                    "value": "$priceTierName"
                  },
                  {
                    "key": "selectedPriceTierPeriod",
                    "value": "$priceTierPeriod"
                  },
                  {
                    "key": "selectedPriceCost",
                    "value": "$priceCost"
                  },
                  {
                    "key": "selectedPriceCurrency",
                    "value": "$priceCurrency"
                  }
                ],
                "on_complete": {
                  "action": "open_screen",
                  "id": "worlds_creation_simple_checkout",
                  "pass_storage": true
                }
              }
            }
          ]
        }
      },
      "position": {
        "x": 3,
        "y": 47,
        "pivot": "top_left"
      },
      "options": {
        "height_padding": 4
      },
      "end_position": {
        "x": 20,
        "y": 64
      }
    },
    {
      "type": "simple_button",
      "id": "back",
      "text": {
        "translate": "gui.back"
      },
      "options": {
        "width": 200,
        "height": 20
      },
      "position": {
        "x": 0,
        "y": -10,
        "pivot": "bottom_center"
      },
      "callback": {
        "action": "open_screen",
        "id": "worlds_creation_simple_checkout",
        "pass_storage": true
      }
    }
  ]
}
